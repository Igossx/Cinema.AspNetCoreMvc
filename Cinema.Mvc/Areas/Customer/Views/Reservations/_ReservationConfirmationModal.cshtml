@model ReservationUserDetailsDto

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Zatwierdzenie rezerwacji</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Czy na pewno chcesz zatwierdzić tę rezerwację? <br />
                Ta operacja jest nieodwracalna.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <form method="post" asp-action="ConfirmReservation" asp-controller="Reservations" asp-route-id="@Model.Id">
                    <button id="confirmReservationButton" type="submit" class="btn btn-primary">Potwierdź</button>
                </form>
            </div>
        </div>
    </div>
</div>
