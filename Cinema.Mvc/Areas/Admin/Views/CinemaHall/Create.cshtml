@model CreateCinemaHallCommand

@{
    ViewData["Title"] = "Create Cinema Hall";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info pl-3">Dodaj salę kinową</h2>

        <div class="form-group row mb-3">
            <div class="col-4">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-4">
                <label asp-for="TotalSeats" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="TotalSeats" asp-items="@(new SelectList(new List<int> { 72, 132 }))" class="form-control">
                    <option value="">Wybierz liczbę miejsc</option>
                </select>
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-plus"></i> Dodaj</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> Wróć</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
