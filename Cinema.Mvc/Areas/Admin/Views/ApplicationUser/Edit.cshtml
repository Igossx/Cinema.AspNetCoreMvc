@model UpdateUserRoleCommand

@{
    ViewData["Title"] = "Edit User";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info pl-3">Edytuj role użytkownika</h2>

        <div class="form-group row mb-3">
            <div class="col-4">
                <label asp-for="Name" class="col-form-label">Imię i nazwisko</label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" readonly="readonly" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-4">
                <label asp-for="Email" class="col-form-label">Email</label>
            </div>
            <div class="col-8">
                <input asp-for="Email" class="form-control" readonly="readonly" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-4">
                <label asp-for="NewRoleName" class="col-form-label">Rola</label>
            </div>
            <div class="col-8">
                <select asp-for="NewRoleName" asp-items="@Model.Roles" class="form-control">
                    <option value="">Wybierz role</option>
                </select>
                <span asp-validation-for="NewRoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-plus"></i> Zapisz</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary w-100"><i class="fas fa-sign-out-alt"></i> Wróć</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
