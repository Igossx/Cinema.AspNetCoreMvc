@model MovieDto

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary display-4">Szczegóły filmu</h2>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid" />
        </div>
        <div class="col-8">
            <dl class="row">
                <dt class="col-4">Id:</dt>
                <dd class="col-8">@Model.Id</dd>

                <dt class="col-4">Tytuł:</dt>
                <dd class="col-8">@Model.Title</dd>

                <dt class="col-4">Enkodowany tytuł:</dt>
                <dd class="col-8">@Model.EncodedTitle</dd>

                <dt class="col-4">Opis:</dt>
                <dd class="col-8">@Model.Description</dd>

                <dt class="col-4">Data wydania:</dt>
                <dd class="col-8">@Model.ReleaseDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-4">Czas trwania:</dt>
                <dd class="col-8">@Model.Duration min.</dd>

                <dt class="col-4">Kategoria:</dt>
                <dd class="col-8">@Model.Category</dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <a asp-controller="Movie" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-warning mt-2">
                <i class="fas fa-edit"></i> Edytuj
            </a>
            <a asp-action="Index" class="btn btn-primary mt-2"><i class="fas fa-sign-out-alt"></i> Wróć</a>
        </div>
    </div>
</div>
